$.fn.bx_anim=function(action,effect,speed,h){return this.each(function(){var sFunc="";var sEval;if(speed==0){effect="default"}switch(action){case"show":switch(effect){case"slide":sFunc="slideDown";break;case"fade":sFunc="fadeIn";break;default:sFunc="show"}break;case"hide":switch(effect){case"slide":sFunc="slideUp";break;case"fade":sFunc="fadeOut";break;default:sFunc="hide"}break;default:case"toggle":switch(effect){case"slide":sFunc="slideToggle";break;case"fade":sFunc=($(this).filter(":visible").length)?"fadeOut":"fadeIn";break;default:sFunc="toggle"}}if((0==speed||undefined==speed)&&undefined==h){sEval="$(this)."+sFunc+"();"}else{if((0==speed||undefined==speed)&&undefined!=h){sEval="$(this)."+sFunc+"(); $(this).each(h);"}else{sEval="$(this)."+sFunc+"('"+speed+"', h);"}}eval(sEval);return this})};$.fn.bx_loading=function(a,d){var e=0,h=0,c=0;var g=null;var f="sys-loading",b="sys-loading-icon";if(d!=undefined){g=$(d)}return this.each(function(){var j=$(this);if(j.find("."+f).length>0){j=j.find("."+f)}else{if(!j.is("."+f)){j=j.append('<div class="'+f+'"></div>').find("."+f)}}var i=j.find("."+b);if(!i.is("."+b)){i=j.append('<div class="sys-loading-smog"></div><div class="'+b+'"><div class="spinner bx-def-margin-topbottom bx-def-margin-sec-leftright"><div class="bounce1"></div><div class="bounce2"></div><div class="bounce3"></div></div></div>').find("."+b)}if(a==undefined){a=!j.is(":visible")}if(a){g=g!=null?g:j.parent();if(g.children(":not(."+f+")").length>0){e=g.outerWidth();h=g.outerHeight();c=i.outerHeight()+20;j.width(e);j.height(h>c?h:c);i.css("left",(j.outerWidth()-parseInt(i.css("width")))/2)}else{j.addClass("sys-loading-inline")}i.css("top",(j.outerHeight()-parseInt(i.css("height")))/2);j.show()}else{j.hide()}})};$.fn.bx_btn_loading=function(c){var a="bx-loading-id";var b=new Date();return this.each(function(){var e=$(this);if(!e.hasClass("bx-btn")){return}if(e.is(":visible")){var d=e.attr(a,b.getTime()).clone().attr("disabled","disabled").addClass("bx-btn-loading").html(aDolLang._sys_txt_btn_loading);e.hide().after(d)}else{var f=e.attr(a);e.removeAttr(a).show().siblings("["+a+"='"+f+"']").remove()}})};$.fn.bx_message_box=function(c,b,a){return this.each(function(){var d=$(this);if(d.children(":first").hasClass("MsgBox")){d.children(":first").replaceWith(c)}else{d.prepend(c)}if(b==undefined||parseInt(b)==0){return}setTimeout(function(f,e){f.children("div.MsgBox:first").bx_anim("hide","fade","slow",function(){$(this).remove();if(e!=undefined){e()}})},1000*parseInt(b),d,a)})};
